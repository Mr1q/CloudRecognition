<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
      >
        <ImageView
            android:id="@+id/Return"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="注 册 界 面"
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:textColor="#0000CD"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:orientation="vertical"
        android:layout_marginTop="27dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#07a6e6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/u1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"/>
            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入用户名"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/black"
                android:textSize="14sp"
                android:inputType="text"
                />

        </LinearLayout>
        <View
            android:background="#d9d9d9"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"/>

        <View
            android:background="#d9d9d9"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@mipmap/m1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:background="@null"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:id="@+id/password"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/black"
                android:inputType="textPassword"
                android:hint="输入密码"/>
        </LinearLayout>
        <View
            android:background="#d9d9d9"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"/>

        <View
            android:background="#d9d9d9"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@mipmap/m1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:background="@null"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:id="@+id/password_confirm"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/black"
                android:inputType="textPassword"
                android:hint="确认密码"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录或注册则表示您同意"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_termOfService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingTop="18dp"
            android:text="《使用条款》"
            android:textColor="#63d065"
            android:textSize="13sp" />

    </LinearLayout>
    <Button
        android:background="@drawable/bg"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:id="@+id/RG"
        android:textSize="15sp"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/Enter_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？立即登陆"
            android:textSize="14sp"
            android:textColor="#C71585"
            />

    </LinearLayout>
    <View
        android:background="@color/colorAccent"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="240dp"/>

</LinearLayout>
