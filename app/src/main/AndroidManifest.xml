<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qjh.cloudrecognition">


    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许程序设置内置sd卡的写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许程序访问WiFi网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序读写手机状态和身份-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--允许程序访问CellID或WiFi热点来获取粗略的位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/cloud"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="c7018cb8365dddfb1dfedd247d3cffe5" />

        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name">


        </activity>
        <activity android:name="com.example.qjh.cloudrecognition.Activity.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.qjh.cloudrecognition.Activity.LoginActivity">

        </activity>
        <activity android:name="com.example.qjh.cloudrecognition.Activity.RegisterActivity"></activity>

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.example.qjh.cloudrecognition.BmobContentProvider"></provider>
        <service android:name="com.amap.api.location.APSService"></service>

        <activity android:name="com.example.qjh.cloudrecognition.user_msg.User_Msg"></activity>
        <activity android:name="com.example.qjh.cloudrecognition.user_msg.Me_Cot">

        </activity>
        <activity android:name="com.example.qjh.cloudrecognition.Control.SearchPOI"/>
    </application>


</manifest>